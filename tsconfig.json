{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2019",
      "es2018",
      "es7",
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "typeRoots": [
      "./types"
    ],
    "jsx": "react",
    "isolatedModules": true
  },
  "include": [
    "src"
  ]
}
